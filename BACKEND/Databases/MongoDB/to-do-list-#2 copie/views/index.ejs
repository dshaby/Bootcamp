<%- include("partials/header") %>

    <body>
        <h1 class="box" id="heading">
            <%= ejsListType %> List
                <br>
                <%= ejsWeekend %>
                    <br>
                    <%= ejsTodaysDate %>
        </h1>

        <div class="box">
            <% ejsToDoList.forEach((task)=> { %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="hidden" name="dynamicListName" value="<%=ejsListType%>">
                        <input type="checkbox" name="checkedItem"
                            value="<%=JSON.stringify({taskID: task._id, taskName: task.name})%>"
                            onchange="this.form.submit()">
                        <p>
                            <%= task.name %>
                        </p>
                    </div>
                </form>
                <% }); %>

                    <form class="item" action="/" method="post">
                        <input type="text" name="newItem" placeholder="New Item" id="">
                        <button type="submit" name="dynamicListName" value="<%=ejsListType%>">+</button>
                    </form>
        </div>

        <%- include("partials/footer"); %>